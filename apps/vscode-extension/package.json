{
  "name": "dev-atlas-vscode-extension",
  "displayName": "Dev Atlas",
  "description": "Dev Atlas - Knowledge Graph Extension for VS Code/Cursor",
  "version": "0.1.0",
  "publisher": "dev-atlas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdul-hamid-achik/dev-atlas.git",
    "directory": "apps/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/abdul-hamid-achik/dev-atlas/issues"
  },
  "homepage": "https://github.com/abdul-hamid-achik/dev-atlas#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dev-atlas.openKnowledgeGraph",
    "onCommand:dev-atlas.createNode",
    "onCommand:dev-atlas.createEdge"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-atlas.openKnowledgeGraph",
        "title": "Open Knowledge Graph",
        "category": "Dev Atlas"
      },
      {
        "command": "dev-atlas.createNode",
        "title": "Create Node",
        "category": "Dev Atlas"
      },
      {
        "command": "dev-atlas.createEdge",
        "title": "Create Edge",
        "category": "Dev Atlas"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dev-atlas-knowledge-graph",
          "name": "Knowledge Graph",
          "when": "true"
        }
      ],
      "dev-atlas": [
        {
          "id": "dev-atlas-knowledge-graph",
          "name": "Knowledge Graph",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dev-atlas",
          "title": "Dev Atlas",
          "icon": "$(graph)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dev-atlas.openKnowledgeGraph",
          "when": "view == dev-atlas-knowledge-graph",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check src/",
    "test": "vitest",
    "clean": "rm -rf dist",
    "package": "vsce package"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.0",
    "semantic-release": "^22.0.12",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "next": "15.5.2",
    "zod": "^3.22.4"
  }
}
