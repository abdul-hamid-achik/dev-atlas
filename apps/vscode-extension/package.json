{
  "name": "dev-atlas-vscode-extension",
  "displayName": "Dev Atlas",
  "description": "Dev Atlas - Knowledge Graph Extension for VS Code/Cursor",
  "version": "0.1.0",
  "publisher": "abdulachik",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdul-hamid-achik/dev-atlas.git",
    "directory": "apps/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/abdul-hamid-achik/dev-atlas/issues"
  },
  "homepage": "https://github.com/abdul-hamid-achik/dev-atlas#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icons/icon-128x128.png",
  "activationEvents": [
    "onCommand:dev-atlas.openKnowledgeGraph",
    "onCommand:dev-atlas.createNode",
    "onCommand:dev-atlas.createEdge",
    "onCommand:dev-atlas.configureFilePrefix"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-atlas.openKnowledgeGraph",
        "title": "Open Knowledge Graph",
        "category": "Dev Atlas",
        "icon": "$(graph-line)"
      },
      {
        "command": "dev-atlas.createNode",
        "title": "Create Node",
        "category": "Dev Atlas",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "dev-atlas.createEdge",
        "title": "Create Edge",
        "category": "Dev Atlas",
        "icon": "$(arrow-right)"
      },
      {
        "command": "dev-atlas.configureFilePrefix",
        "title": "Configure File Path Prefix",
        "category": "Dev Atlas",
        "icon": "$(gear)"
      },
      {
        "command": "dev-atlas.searchKnowledgeGraph",
        "title": "Search Knowledge Graph",
        "category": "Dev Atlas",
        "icon": "$(search)"
      },
      {
        "command": "dev-atlas.advancedSearch",
        "title": "Advanced Search",
        "category": "Dev Atlas", 
        "icon": "$(search-fuzzy)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dev-atlas-knowledge-graph",
          "name": "Knowledge Graph",
          "when": "true"
        }
      ],
      "dev-atlas": [
        {
          "id": "dev-atlas-knowledge-graph",
          "name": "Knowledge Graph",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dev-atlas",
          "title": "Dev Atlas",
          "icon": "icons/icon-32x32.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dev-atlas.openKnowledgeGraph",
          "when": "view == dev-atlas-knowledge-graph",
          "group": "navigation"
        },
        {
          "command": "dev-atlas.createNode",
          "when": "view == dev-atlas-knowledge-graph",
          "group": "navigation@1"
        },
        {
          "command": "dev-atlas.createEdge",
          "when": "view == dev-atlas-knowledge-graph",
          "group": "navigation@2"
        },
        {
          "command": "dev-atlas.configureFilePrefix",
          "when": "view == dev-atlas-knowledge-graph",
          "group": "navigation@3"
        }
      ],
      "commandPalette": [
        {
          "command": "dev-atlas.openKnowledgeGraph",
          "title": "Dev Atlas: Open Knowledge Graph"
        },
        {
          "command": "dev-atlas.createNode",
          "title": "Dev Atlas: Create Node"
        },
        {
          "command": "dev-atlas.createEdge",
          "title": "Dev Atlas: Create Edge"
        },
        {
          "command": "dev-atlas.configureFilePrefix",
          "title": "Dev Atlas: Configure File Path Prefix"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Dev Atlas",
      "properties": {
        "devAtlas.filePathPrefix": {
          "type": "string",
          "default": "@",
          "description": "Prefix character to add before file paths when copying to clipboard (e.g., '@' for Cursor, '#' for other editors, or empty for no prefix)",
          "examples": [
            "@",
            "#",
            "",
            ">"
          ]
        },
        "devAtlas.autoOpenFiles": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open file nodes without asking"
        },
        "devAtlas.defaultFileAction": {
          "type": "string",
          "enum": [
            "ask",
            "open",
            "copy",
            "both"
          ],
          "default": "ask",
          "description": "Default action when clicking file nodes: ask (prompt user), open (open in editor), copy (copy to clipboard), both (open and copy)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check src/",
    "clean": "rm -rf dist",
    "package": "vsce package"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.0",
    "semantic-release": "^22.0.12",
    "typescript": "^5.2.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "drizzle-orm": "^0.29.2",
    "next": "15.5.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}